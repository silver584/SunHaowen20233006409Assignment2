<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Row: Timer + Score -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/img_wakamole_text"
            android:scaleType="centerInside"
            android:paddingTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_timer_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Timer: 0"
                android:gravity="center" />
                <!--android:textAppearance="?android:attr/textAppearanceTitle"-->


            <TextView
                android:id="@+id/tv_score_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Score: 0"
                android:gravity="center" />
                <!--android:textAppearance="?android:attr/textAppearanceTitle"-->


        </LinearLayout>
    </LinearLayout>

    <!-- 3x3 Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Row 1 -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <ImageView android:id="@+id/iv_without_mole_01" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="2dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole" />
            <ImageView android:id="@+id/iv_without_mole_02" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="2dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole" />
            <ImageView android:id="@+id/iv_without_mole_03" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="2dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole" />
        </LinearLayout>
        <!-- Row 2 -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <ImageView android:id="@+id/iv_without_mole_04" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="2dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole" />
            <ImageView android:id="@+id/iv_without_mole_05" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="2dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole" />
            <ImageView android:id="@+id/iv_without_mole_06" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="2dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole" />
        </LinearLayout>
        <!-- Row 3 -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <ImageView android:id="@+id/iv_without_mole_07" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="2dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole" />
            <ImageView android:id="@+id/iv_without_mole_08" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="2dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole" />
            <ImageView android:id="@+id/iv_without_mole_09" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="2dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>